<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboardFragment">

    <!-- منوی همکار اکسپرس - 4 تب: وینور، پورسانت، روتین، من (هماهنگ با سایت) -->
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="ir.vinor.app.DashboardFragment"
        android:label="وینور"
        tools:layout="@layout/fragment_webview" />

    <fragment
        android:id="@+id/commissionsFragment"
        android:name="ir.vinor.app.CommissionsFragment"
        android:label="پورسانت"
        tools:layout="@layout/fragment_commissions" />

    <fragment
        android:id="@+id/routineFragment"
        android:name="ir.vinor.app.RoutineFragment"
        android:label="روتین"
        tools:layout="@layout/fragment_routine" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="ir.vinor.app.ProfileFragment"
        android:label="من"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profile_to_profileEdit"
            app:destination="@id/profileEditFragment"
            app:popUpTo="@id/profileFragment"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/profileEditFragment"
        android:name="ir.vinor.app.ProfileEditFragment"
        android:label="ویرایش پروفایل"
        tools:layout="@layout/fragment_profile_edit" />

    <!-- نگه‌داری برای سازگاری با مسیرهای قدیمی (در منو نمایش داده نمی‌شوند) -->
    <fragment
        android:id="@+id/expressFragment"
        android:name="ir.vinor.app.ExploreFragment"
        android:label="اکسپلور"
        tools:layout="@layout/fragment_webview" />

    <fragment
        android:id="@+id/myPropertiesFragment"
        android:name="ir.vinor.app.MyPropertiesFragment"
        android:label="ملک من"
        tools:layout="@layout/fragment_webview" />

</navigation>
