<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vinor_bg_dark">

    <!-- Update Banner (hidden by default) -->
    <LinearLayout
        android:id="@+id/updateBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="#FFFDE7"
        android:visibility="gone">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_v_green"
            android:tint="#F59E0B"
            android:contentDescription="Update" />

        <TextView
            android:id="@+id/updateBannerText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:text="بروزرسانی جدید اپلیکیشن موجود است"
            android:textColor="#7C2D12"
            android:textSize="12sp" />

        <Button
            android:id="@+id/updateBannerAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="بروزرسانی"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#F59E0B"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" />
    </LinearLayout>

    <!-- WebView -->
    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Loader Container with Skeleton -->
    <FrameLayout
        android:id="@+id/loaderContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/vinor_bg_dark"
        android:visibility="visible">

        <!-- Skeleton View (Placeholder) -->
        <LinearLayout
            android:id="@+id/skeletonView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Skeleton -->
            <View
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/vinor_skeleton_bg"
                android:layout_marginBottom="16dp" />

            <!-- Content Skeleton -->
            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/vinor_skeleton_bg"
                android:layout_marginBottom="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/vinor_skeleton_bg"
                android:layout_marginBottom="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/vinor_skeleton_bg" />

        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_gravity="top"
            android:max="100"
            android:progress="0"
            android:progressTint="#16a34a"
            android:visibility="visible" />

    </FrameLayout>

    <!-- Offline Container -->
    <LinearLayout
        android:id="@+id/offlineContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:background="@color/vinor_offline_bg"
        android:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_v_green"
            android:contentDescription="Offline"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اتصال به اینترنت برقرار نیست"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/vinor_offline_text_primary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="لطفاً اتصال اینترنت خود را بررسی کنید"
            android:textSize="14sp"
            android:textColor="@color/vinor_offline_text_secondary"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/retryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تلاش مجدد"
            android:textColor="#FFFFFF"
            android:backgroundTint="#16a34a"
            android:paddingHorizontal="32dp"
            android:paddingVertical="12dp" />

    </LinearLayout>

</FrameLayout>

