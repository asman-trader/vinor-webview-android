<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vinor_bg_dark"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:layoutDirection="rtl">

        <ImageButton
            android:id="@+id/loginStep2Back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="بازگشت"
            android:src="@drawable/ic_chevron_right"
            app:tint="#9CA3AF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="کد تأیید"
            android:textColor="#F9FAFB"
            android:textSize="22sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/loginStep2PhoneLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#9CA3AF"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_routine_card"
            android:padding="16dp">
            <EditText
                android:id="@+id/loginStep2Code"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@null"
                android:hint="کد ۵ رقمی"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:maxLength="6"
                android:textColor="#F9FAFB"
                android:textColorHint="#6B7280"
                android:textSize="18sp" />
        </FrameLayout>

        <TextView
            android:id="@+id/loginStep2Error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#F87171"
            android:textSize="12sp"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/loginStep2Progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/loginStep2Submit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_button_primary"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="تأیید ورود"
            android:textColor="#F9FAFB"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/loginStep2Resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:text="ارسال مجدد کد"
            android:textColor="#93C5FD"
            android:textSize="13sp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>
</ScrollView>
