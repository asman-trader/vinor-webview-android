<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vinor_bg_light">

    <FrameLayout
        android:id="@+id/webViewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Snapshot overlay to mask flash during navigation; visibility managed in code -->
    <ImageView
        android:id="@+id/snapshotOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <!-- Loader overlay (semi-transparent) keeps previous page visible underneath -->
    <FrameLayout
        android:id="@+id/loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="12dp">

            <ImageView
                android:id="@+id/loaderLogo"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_v_green"
                android:contentDescription="@string/app_name" />
        </LinearLayout>
    </FrameLayout>

    <!-- Error banner; shown on load failures without blanking the page -->
    <LinearLayout
        android:id="@+id/errorBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="#CCB00020"
        android:visibility="gone">

        <TextView
            android:id="@+id/errorText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:text="خطا در بارگذاری" />

        <Button
            android:id="@+id/retryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تلاش مجدد" />
    </LinearLayout>

    <!-- Hidden debug button; made visible programmatically if needed -->
    <Button
        android:id="@+id/debugButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:text="debug"
        android:visibility="gone" />

</FrameLayout>

